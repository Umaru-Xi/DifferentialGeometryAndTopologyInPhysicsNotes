\begin_layout Enumerate
Hopf纤维化: 
\begin_inset Formula $S^{1}\hookrightarrow S^{3}\xrightarrow{p}S^{2}$
\end_inset

, 细节如下:
\end_layout

\begin_deeper
\begin_layout Enumerate
\begin_inset Formula $S^{3},S^{2}$
\end_inset

分别嵌入
\begin_inset Formula $\mathbb{C}^{2}$
\end_inset

及
\begin_inset Formula $\mathbb{C}\times\mathbb{R}$
\end_inset

中
\begin_inset Formula $\begin{cases}
S^{3}:|z_{0}|^{2}+|z_{1}|^{2}=1 & (z_{0},z_{1})\in\mathbb{C}^{2}\\
S^{2}:|z|^{2}+x^{2}=1 & (z,x)\in\mathbb{C}\times\mathbb{R}
\end{cases}$
\end_inset

;
\end_layout

\begin_layout Enumerate
如下定义的映射
\begin_inset Formula $p:\mathbb{C}^{2}\to\mathbb{C}\times\mathbb{R}$
\end_inset

实际上给出了
\begin_inset Formula $p:S^{3}\to S^{2}$
\end_inset

:
\end_layout

\begin_deeper
\begin_layout Standard
\begin_inset Formula $\begin{cases}
p(z_{0},z_{1})=(2z_{0}z_{1}^{*},|z_{0}|^{2}-|z_{1}|^{2})\\
|2z_{0}z_{1}^{*}|^{2}+(|z_{0}|^{2}-|z_{1}|^{2})^{2}=(|z_{0}|^{2}+|z_{1}|^{2})^{2}
\end{cases}$
\end_inset


\begin_inset Formula $\Rightarrow$
\end_inset


\begin_inset Formula $\forall(z_{0},z_{1})\in S^{3}\subset\mathbb{C}^{2}$
\end_inset

, 有
\begin_inset Formula $p(z_{0},z_{1})\in S^{2}\subset\mathbb{C}\times\mathbb{R}$
\end_inset

;
\end_layout

\end_deeper
\begin_layout Enumerate
取定
\begin_inset Formula $(z,x)\in S^{2}$
\end_inset

, 
\begin_inset Formula $p(z_{0},z_{1})=(z,x)$
\end_inset

的原像
\begin_inset Formula $(z_{0},z_{1})$
\end_inset

构成
\begin_inset Formula $S^{1}$
\end_inset

:
\end_layout

\begin_deeper
\begin_layout Standard
\begin_inset Formula $\begin{cases}
2z_{0}z_{1}^{*}=z\\
|z_{0}|^{2}-|z_{1}|^{2}=x
\end{cases}$
\end_inset


\begin_inset Formula $\xLeftrightarrow{z_{j}'=e^{i\theta}z_{j}}$
\end_inset


\begin_inset Formula $\begin{cases}
2z_{0}'z_{1}'^{*}=z\\
|z_{0}'|^{2}-|z_{1}'|^{2}=x
\end{cases}$
\end_inset

;
\end_layout

\end_deeper
\end_deeper
