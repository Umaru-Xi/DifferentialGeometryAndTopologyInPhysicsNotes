\end_deeper
\begin_layout Enumerate
矩阵构成的李群:
\end_layout

\begin_deeper
\begin_layout Enumerate
一般线性群
\begin_inset Formula $GL(n,\mathbb{C})$
\end_inset

;
\end_layout

\begin_layout Enumerate
幺正群
\begin_inset Formula $U(n)$
\end_inset

和
\begin_inset Formula $U(p,q)$
\end_inset

: 保持
\begin_inset Formula $n-$
\end_inset

维复向量空间
\begin_inset Formula $V\cong\mathbb{C}^{n}$
\end_inset

的内积不变的变换;
\end_layout

\begin_deeper
\begin_layout Enumerate
\begin_inset Formula $<u,v>=\bar{u}^{T}\cdot v=\sum\limits _{j=1}^{n}\bar{u}_{j}v^{j}$
\end_inset

;
\end_layout

\begin_layout Enumerate
\begin_inset Formula $<u,v>_{p,q}=-\sum\limits _{i=1}^{p}\bar{u_{i}}v^{i}+\sum\limits _{j=1}^{q}\bar{u}_{p+j}v^{p+j}$
\end_inset

;
\end_layout

\end_deeper
\begin_layout Enumerate
特殊幺正群
\begin_inset Formula $SU(p,q)=U(p,q)\cap SL(n,\mathbb{C})$
\end_inset

;
\end_layout

\begin_layout Enumerate
正交群
\begin_inset Formula $O(n)$
\end_inset

: 在实数集上保持欧几里得内积不变的变换;
\end_layout

\begin_layout Enumerate
特殊正交群
\begin_inset Formula $SO(p,q)=O(p,q)\cap SL(n,\mathbb{R})$
\end_inset

;
\end_layout

\begin_layout Enumerate
辛群
\begin_inset Formula $Sp(2n,\mathbb{C})$
\end_inset

: 保持向量
\begin_inset Formula $y,z\in\mathbb{C}^{2n}$
\end_inset

或
\begin_inset Formula $\mathbb{R}^{2n}$
\end_inset

的斜积
\begin_inset Formula $\omega(y,z)$
\end_inset

不变的变换:
\end_layout

\begin_deeper
\begin_layout Enumerate
\begin_inset Formula $\omega(w,z)=\sum\limits _{j=1}^{n}(w_{j}z_{j}'-w_{j}'z_{j})$
\end_inset

;
\end_layout

\end_deeper
\begin_layout Enumerate
幺正辛群
\begin_inset Formula $USp(2n)=Sp(2n,\mathbb{C})\cap U(2n)$
\end_inset

;
\end_layout

\end_deeper
\begin_layout Enumerate
矩阵的指数映射: 设
\begin_inset Formula $A$
\end_inset

是
\begin_inset Formula $n\times n$
\end_inset

矩阵, 指数
\begin_inset Formula $e^{A}$
\end_inset

来自幂级数
\begin_inset Formula $e^{A}=1+A+\frac{A^{2}}{2!}+...=\sum\limits _{k=0}^{\infty}\frac{A^{k}}{k!}$
\end_inset

;
\end_layout

\begin_layout Enumerate
Pauli矩阵: 
\begin_inset Formula $\sigma_{k}=\left(\begin{array}{cc}
\delta_{a3} & \delta_{a1}-i\delta_{a2}\\
\delta_{a1}+i\delta_{a2} & -\delta_{a3}
\end{array}\right),k=0,1,2,3$
\end_inset

;
\end_layout

\begin_layout Enumerate
